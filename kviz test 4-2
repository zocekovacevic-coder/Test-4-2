    function getCurrentLevelKey() {
      const select = document.getElementById("levelSelect");
      return select.value || "easy";
    }

    function renderQuiz() {
      const levelKey = getCurrentLevelKey();
      const container = document.getElementById("quizContainer");
      const resultBox = document.getElementById("resultBox");
      resultBox.style.display = "none";
      resultBox.textContent = "";

      const questions = quizData[levelKey] || [];
      const pillInfo = document.getElementById("pillInfo");
      pillInfo.textContent =
        questions.length + (levelKey === "easy"
          ? " –ø–∏—Ç–∞—ö–∞"
          : levelKey === "medium"
          ? " –ø–∏—Ç–∞—ö–∞"
          : " –ø–∏—Ç–∞—ö–∞");

      if (!questions.length) {
        container.innerHTML = "<p>–ù–µ–º–∞ –¥–µ—Ñ–∏–Ω–∏—Å–∞–Ω–∏—Ö –ø–∏—Ç–∞—ö–∞ –∑–∞ –æ–≤–∞—ò –Ω–∏–≤–æ.</p>";
        return;
      }

      // –ì–µ–Ω–µ—Ä–∏—Å–∞—ö–µ HTML –∑–∞ –ø–∏—Ç–∞—ö–∞
      let html = "";
      questions.forEach((q, index) => {
        html += `<div class="question">
          <p>${index + 1}. ${q.question}</p>`;
        q.options.forEach(opt => {
          const inputId = `${q.id}_${opt.value}`;
          html += `
            <label class="option" for="${inputId}">
              <input type="radio" id="${inputId}" name="${q.id}" value="${opt.value}" />
              ${opt.value}) ${opt.text}
            </label>
          `;
        });
        html += `</div>`;
      });

      container.innerHTML = html;
    }

    function resetAnswers() {
      const inputs = document.querySelectorAll('#quizContainer input[type="radio"]');
      inputs.forEach(i => (i.checked = false));
      const resultBox = document.getElementById("resultBox");
      resultBox.style.display = "none";
      resultBox.textContent = "";
    }

    function submitQuiz() {
      const name = document.getElementById("studentName").value.trim();
      if (!name) {
        alert("–£–Ω–µ—Å–∏ –∏–º–µ –∏ –ø—Ä–µ–∑–∏–º–µ.");
        return;
      }

      const levelKey = getCurrentLevelKey();
      const questions = quizData[levelKey] || [];
      if (!questions.length) {
        alert("–ù–µ–º–∞ –ø–∏—Ç–∞—ö–∞ –∑–∞ –∏–∑–∞–±—Ä–∞–Ω–∏ –Ω–∏–≤–æ.");
        return;
      }

      const answers = {};
      let score = 0;
      for (const q of questions) {
        const checked = document.querySelector(`input[name="${q.id}"]:checked`);
        if (!checked) {
          alert("–û–¥–≥–æ–≤–æ—Ä–∏ –Ω–∞ —Å–≤–∞ –ø–∏—Ç–∞—ö–∞ –ø—Ä–µ —Å–ª–∞—ö–∞.");
          return;
        }
        answers[q.id] = checked.value;
        if (checked.value === q.correct) score++;
      }

      const maxScore = questions.length;
      const resultBox = document.getElementById("resultBox");
      resultBox.style.display = "block";
      resultBox.innerHTML =
        `<strong>${name}</strong>, –æ—Å–≤–æ—ò–∏–æ/–ª–∞ —Å–∏ <strong>${score}/${maxScore}</strong> –ø–æ–µ–Ω–∞ `
        + `(–Ω–∏–≤–æ: ${levelKey === "easy" ? "I ‚Äì –æ—Å–Ω–æ–≤–Ω–∏" : levelKey === "medium" ? "II ‚Äì —Å—Ä–µ–¥—ö–∏" : "III ‚Äì –Ω–∞–ø—Ä–µ–¥–Ω–∏"}).`
        + "<br/>–†–µ–∑—É–ª—Ç–∞—Ç —ò–µ –ø–æ—Å–ª–∞—Ç —É —Ç–∞–±–ª–∏—Ü—É.";

      // –°–ª–∞—ö–µ –ø–æ–¥–∞—Ç–∞–∫–∞ —É Google Sheets –ø—Ä–µ–∫–æ Apps Script-–∞
      fetch(SCRIPT_URL, {
        method: "POST",
        mode: "no-cors",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          name: name,
          level: levelKey,
          score: score,
          maxScore: maxScore,
          answers: answers
        })
      });
    }

    // –ê—É—Ç–æ–º–∞—Ç—Å–∫–∏ —É—á–∏—Ç–∞—ò –ø–∏—Ç–∞—ö–∞ –∑–∞ I –Ω–∏–≤–æ –ø—Ä–∏ —É—á–∏—Ç–∞–≤–∞—ö—É —Å—Ç—Ä–∞–Ω–∏—Ü–µ
    window.addEventListener("DOMContentLoaded", renderQuiz);
  </script>
</body>
</html>
